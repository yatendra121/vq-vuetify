{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true, // Enable importing JSON modules
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "outDir": "temp-types",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "skipLibCheck": false, // Skip checking types of external modules
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["src/*"],
      "types": ["jest", "node", "vue-router", "vuetify"] // Adjusted path resolution
    }
  },
  "include": ["src/index.ts", "src/integrations.ts"],
  "exclude": [
    "node_modules", // Avoid type-checking node_modules
    "dist" // Exclude built files
  ]
}

//"src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"
