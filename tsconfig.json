{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "declaration": true,
    "outFile": "dist/index",
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "skipLibCheck": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "paths": {
      "@/*": ["src/*"],
      "types": ["jest", "node", "vue-router"]
    }
  },
  "include": ["src/main.ts"]
}
